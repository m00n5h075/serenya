{
  "widgets": [
    {
      "type": "metric",
      "x": 0,
      "y": 0,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["Serenya/Cost", "BedrockTokensUsed", "Environment", "${environment}", "Model", "claude-3-sonnet", { "stat": "Sum" }],
          [".", ".", ".", ".", ".", "claude-3-haiku", { "stat": "Sum" }]
        ],
        "period": 3600,
        "stat": "Sum",
        "region": "${region}",
        "title": "AWS Bedrock Token Usage",
        "view": "timeSeries"
      }
    },
    {
      "type": "metric",
      "x": 8,
      "y": 0,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["Serenya/Cost", "BedrockCostEstimate", "Environment", "${environment}", { "stat": "Sum" }]
        ],
        "period": 3600,
        "stat": "Sum",
        "region": "${region}",
        "title": "Estimated Bedrock Costs ($)",
        "view": "timeSeries",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "x": 16,
      "y": 0,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/Lambda", "Duration", "FunctionName", "SerenyaBackend-${environment}-ProcessFunction", { "stat": "Sum" }]
        ],
        "period": 3600,
        "stat": "Sum",
        "region": "${region}",
        "title": "Lambda Compute Hours",
        "view": "timeSeries"
      }
    },
    {
      "type": "metric",
      "x": 0,
      "y": 6,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/RDS", "DatabaseConnections", "DBInstanceIdentifier", "serenyabackend-${environment}-serenyad-${dbInstanceId}", { "stat": "Average" }]
        ],
        "period": 3600,
        "stat": "Average",
        "region": "${region}",
        "title": "RDS Connection Usage",
        "view": "timeSeries"
      }
    },
    {
      "type": "metric",
      "x": 8,
      "y": 6,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/S3", "BucketSizeBytes", "BucketName", "serenya-temp-files-${environment}-${accountId}", "StorageType", "StandardStorage", { "stat": "Average" }]
        ],
        "period": 86400,
        "stat": "Average",
        "region": "${region}",
        "title": "S3 Storage Usage (Bytes)",
        "view": "timeSeries"
      }
    },
    {
      "type": "metric",
      "x": 16,
      "y": 6,
      "width": 8,
      "height": 6,
      "properties": {
        "metrics": [
          ["AWS/ApiGateway", "Count", "ApiName", "serenya-api-${environment}", { "stat": "Sum" }]
        ],
        "period": 3600,
        "stat": "Sum",
        "region": "${region}",
        "title": "API Gateway Request Count",
        "view": "timeSeries"
      }
    },
    {
      "type": "number",
      "x": 0,
      "y": 12,
      "width": 6,
      "height": 6,
      "properties": {
        "metrics": [
          ["Serenya/Cost", "DailyCostEstimate", "Environment", "${environment}", { "stat": "Maximum" }]
        ],
        "period": 86400,
        "stat": "Maximum",
        "region": "${region}",
        "title": "Daily Cost Estimate",
        "view": "singleValue",
        "setPeriodToTimeRange": true
      }
    },
    {
      "type": "number",
      "x": 6,
      "y": 12,
      "width": 6,
      "height": 6,
      "properties": {
        "metrics": [
          ["Serenya/Cost", "MonthlyCostProjection", "Environment", "${environment}", { "stat": "Maximum" }]
        ],
        "period": 86400,
        "stat": "Maximum",
        "region": "${region}",
        "title": "Monthly Projection",
        "view": "singleValue",
        "setPeriodToTimeRange": true
      }
    },
    {
      "type": "metric",
      "x": 12,
      "y": 12,
      "width": 12,
      "height": 6,
      "properties": {
        "metrics": [
          ["Serenya/Cost", "CostPerProcessing", "Environment", "${environment}", { "stat": "Average" }]
        ],
        "period": 3600,
        "stat": "Average",
        "region": "${region}",
        "title": "Cost Per Document Processing",
        "view": "timeSeries"
      }
    },
    {
      "type": "log",
      "x": 0,
      "y": 18,
      "width": 24,
      "height": 6,
      "properties": {
        "query": "SOURCE '/aws/lambda/SerenyaBackend-${environment}-ProcessFunction'\n| filter @message like /COST_TRACKING/\n| stats sum(cost) by bin(1h)",
        "region": "${region}",
        "title": "Hourly Cost Breakdown",
        "view": "table"
      }
    }
  ]
}